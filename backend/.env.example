# Database Configuration
DATABASE_URL=postgresql://openclaw_user:openclaw_dev_password@localhost:5432/openclaw_saas

# JWT Configuration
JWT_SECRET=your_random_64_char_hex_secret_here_change_in_production
JWT_EXPIRY=86400

# Docker Configuration
# Windows: npipe:////./pipe/dockerDesktopLinuxEngine
# Linux/Mac: unix:///var/run/docker.sock
DOCKER_HOST=npipe:////./pipe/dockerDesktopLinuxEngine
OPENCLAW_IMAGE=openclaw:latest
OPENCLAW_NETWORK=openclaw_internal

# Razorpay Configuration (Test Mode)
RAZORPAY_KEY_ID=your_razorpay_test_key_id
RAZORPAY_KEY_SECRET=your_razorpay_test_key_secret
RAZORPAY_WEBHOOK_SECRET=your_webhook_secret_from_razorpay

# Application Configuration
PORT=3000
NODE_ENV=development
FRONTEND_URL=http://localhost:5173

# Resource Limits (Defaults)
DEFAULT_CPU_LIMIT=1.0
DEFAULT_MEMORY_LIMIT=512m
MAX_WORKSPACES_PER_USER=3

# BCRYPT Configuration
BCRYPT_ROUNDS=10
